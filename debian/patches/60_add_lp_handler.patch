+char *
+terminal_util_get_lp_url (const char *orig_url)
+{
+  char *uri;
+  const char *bugnum = orig_url;
+
+  while (*bugnum && ! g_ascii_isdigit (*bugnum))
+      bugnum++;
+
+  uri = g_strdup_printf ("https://bugs.launchpad.net/bugs/%s", bugnum);
+
+  return uri;
+}
